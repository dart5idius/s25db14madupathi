extends layout

block content
  .container
    h1= title
    if message
      h2.text-danger= message

    br
    form(role='form', action='/login', method='post', style='max-width: 300px;')
      .form-group
        input.form-control(type='text', name='username', placeholder='Enter Username', required)
      .form-group
        input.form-control(type='password', name='password', placeholder='Password', required)
      .form-group
        button.btn.btn-primary(type='submit') Login
        a.btn.btn-secondary.ml-2(href='/') Cancel
